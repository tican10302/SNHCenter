@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>SNHCenter</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .body {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            background-image: url(@Url.Content("~/img/common/background.png"));
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }

        .error-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #fff;
            padding: 90px 86px 102px 86px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .error-img {
            max-width: 340px;
        }

        .error-title {
            font-weight: bold;
            font-size: 28px;
            margin:  48px 0 26px 0;
        }

        .error-button {
            display: block;
            font-size: 16px;
            color: #fff;
            width: 100%;
            text-align: center;
            padding: 12px 0;
            border-radius: 8px;
            background-color: #4880FF;
            transition: all 0.1s ease-in-out;
        }

        .error-button:hover {
            background-color: #3773ff;
        }
    </style>
</head>

<body>
    <div class="body">
        <div class="error-card">
            <img class="error-img" src="@Url.Content("~/img/common/404.png")" />
            <span class="error-title">Looks like you're got lost...</span>
            <a class="error-button" href="@Url.Action("Index", "Home")">Back to Dashboard</a>
        </div>
    </div>
</body>
</html>

